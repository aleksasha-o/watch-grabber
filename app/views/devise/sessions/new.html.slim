.container
  .mt-5.center
    h2
      = t('session.login')
    .flex-center
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .input-field
          i.material-icons.prefix email
          = f.label :email
          = f.email_field :email
        .input-field
          i.material-icons.prefix lock
          = f.label :password
          = f.password_field :password
        .actions
          = f.button t('session.login'), type: 'submit', class: 'btn waves-effect'
  = render 'devise/shared/links'
