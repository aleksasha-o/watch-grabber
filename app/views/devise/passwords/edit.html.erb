<div class="container">
  <div class="mt-5 center">
    <h2><%= t('session.changepass') %></h2>
    <div class="flex-center">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render 'devise/shared/error_messages', resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="input-field">
          <%= f.label :password, t('session.newpass') %>
          <%= f.password_field :password %>
        </div>

        <div class="input-field">
          <%= f.label :password_confirmation, t('session.confirmnewpass') %><br/>
          <%= f.password_field :password_confirmation, data: { length: resource_class.password_length.max } %>
        </div>

        <div class="actions">
          <%= f.button t('session.changepass'), type: 'submit', class: 'btn waves-effect' %>
      <% end %>
      </div>
    </div>

    <%= render 'devise/shared/links' %>
  </div>
</div>
